{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "argocd": {
    "fileMatch": ["argo-apps/.+\\.yaml$"]
  },
  "docker": {
    "fileMatch": [
      "docker/.+\\.yaml$",
      "(^|/)(?:docker-)?compose[^/]*\\.ya?ml$"
    ]
  }
}
