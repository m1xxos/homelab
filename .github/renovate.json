{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$", "\\.ya?ml$"]
  },
  "argocd": {
    "fileMatch": ["argo-apps/.+\\.ya?ml$"]
  },
  "docker": {
    "fileMatch": ["docker/.+\\.ya?ml$"]
  }
}
