{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/",
      "/\\.ya?ml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/argo-apps/.+\\.ya?ml$/"
    ]
  },
  "docker-compose": {
    "managerFilePatterns": [
      "/docker/.+\\.yaml$/",
      "/(^|/)(?:docker-)?compose[^/]*\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
